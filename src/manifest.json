{
    "manifest_version": 2,
    "browser_action": {
        "default_icon": {
            "19": "img/icon_19.png",
            "38": "img/icon_38.png"
        },
        "default_title": "Torrents MultiSearch"
    },
    "icons": {
        "128": "img/icon_128.png",
        "48": "img/icon_48.png",
        "16": "img/icon_16.png"
    },
    "options_page": "options.html",
    "permissions": ["storage", "contextMenus", "http://*/*", "https://*/*", "unlimitedStorage"],
    "omnibox": {
        "keyword" : "tms"
    },
    "background": {
        "scripts": ["js/bg.js"]
    },
    "content_security_policy": "script-src 'self' https://www.google-analytics.com/analytics.js; object-src 'self'",
    "name": "__MSG_extName__",
    "description": "__MSG_extDesc__",
    "default_locale": "en",
    "version": "1.0"
}